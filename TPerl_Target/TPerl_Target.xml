<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

	<Script file="TPerl_Target.lua"/>

	<Button name="TPerl_TargetTemplate" inherits="SecureUnitButtonTemplate" virtual="true" clampedToScreen="true" frameStrata="LOW" movable="true" parent="UIParent">
		<Size>
			<!-- The size of this frame determines what can be clicked for the menu and moving, hence it is the same size as the name frame. -->
			<AbsDimension x="220" y="62"/>
		</Size>
		<Scripts>
			<OnEnter function="TPerl_Unit_OnEnter"/>
			<OnLeave function="TPerl_Unit_OnLeave"/>
			<OnEvent function="TPerl_Target_OnEvent"/>
			<OnUpdate function="TPerl_Target_OnUpdate"/>
			<OnShow function="TPerl_Unit_UpdatePortrait"/>
			<OnDragStart>
				if (TPerlLocked == 0) then
					self:StartMoving()
				end
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing()
				TPerl_SavePosition(self)
			</OnDragStop>
			<OnHide>
				if (TPerlDB.target.sound) then
					PlaySound(684)
				end
			</OnHide>
		</Scripts>
		<Frames>
			<!-- Target Name -->
			<Button name="$parentnameFrame" inherits="TPerlBackdropTemplate,SecureUnitButtonTemplate">
				<KeyValues>
					<KeyValue key="backdropInfo" value="TPerl_Frame_Backdrop_32_16_3333" type="global"/>
				</KeyValues>
				<Scripts>
					<OnLoad>
						self:OnBackdropLoaded()
						self:RegisterForClicks("AnyUp")
						self:RegisterForDrag("LeftButton")
						TPerl_RegisterUnitText(_G[self:GetName().."text"])
						self:SetScript("OnEnter", function(self)
							TPerl_Unit_OnEnter(self:GetParent())
						end)
						self:SetScript("OnLeave", function(self)
							TPerl_Unit_OnLeave(self:GetParent())
						end)
					</OnLoad>
					<OnDragStart>
						if (TPerlLocked == 0) then
							self:GetParent():StartMoving()
						end
					</OnDragStart>
					<OnDragStop>
						self:GetParent():StopMovingOrSizing()
						TPerl_SavePosition(self:GetParent())
					</OnDragStop>
				</Scripts>
				<Size>
					<AbsDimension x="160" y="24"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT"/>
				</Anchors>
				<Frames>
					<!-- PVP Icon -->
					<Frame name="$parentpvp" inherits="TPerlBackdropTemplate">
						<Scripts>
							<OnLoad>
								self:SetScale(0.7)
								self:SetFrameLevel(self:GetParent():GetFrameLevel() + 2)
							</OnLoad>
						</Scripts>
						<Size>
							<AbsDimension x="62" y="62"/>
						</Size>
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset>
									<AbsDimension x="-5" y="1"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<Texture name="$parenticon" file="Interface\TargetingFrame\UI-PVP-FFA" setAllPoints="true"/>
							</Layer>
						</Layers>
					</Frame>
					<!-- Raid Target Icon -->
					<Frame name="$parentraidIcon" hidden="true" inherits="TPerlBackdropTemplate" >
						<Scripts>
							<OnLoad>
								self:SetFrameLevel(self:GetParent():GetFrameLevel() + 5)
							</OnLoad>
						</Scripts>
						<Size>
							<AbsDimension x="32" y="32"/>
						</Size>
						<Anchors>
							<Anchor point="CENTER" relativePoint="TOPLEFT">
								<Offset>
									<AbsDimension x="5" y="-4"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND">
								<Texture name="$parenttexture" file="Interface\TargetingFrame\UI-RaidTargetingIcons" setAllPoints="true"/>
							</Layer>
						</Layers>
					</Frame>
					<!-- Combo Point Meter -->
					<StatusBar name="$parentcpMeter" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset>
									<AbsDimension x="6" y="-6"/>
								</Offset>
							</Anchor>
							<Anchor point="BOTTOMRIGHT">
								<Offset>
									<AbsDimension x="-6" y="6"/>
								</Offset>
							</Anchor>
						</Anchors>
						<BarTexture name="$parentTex" file="Interface\TargetingFrame\UI-StatusBar">
							<TexCoords left=".8" right="1" top=".8" bottom="1"/>
						</BarTexture>
						<BarColor r="0" g="0" b="1" a="0.25"/>
					</StatusBar>
				</Frames>
				<Layers>
					<Layer level="OVERLAY">
						<!-- Combat Icon -->
						<Texture name="$parentcombatIcon" file="Interface\CharacterFrame\UI-StateIcon" hidden="true">
							<Size>
								<AbsDimension x="32" y="31"/>
							</Size>
							<Anchors>
								<Anchor point="RIGHT"/>
							</Anchors>
							<TexCoords left="0.49" right="1.0" top="0.0" bottom="0.49"/>
						</Texture>
						<!-- 30 Yard Range Icon, re-incarnated... -->
						<Texture name="$parentrangeIcon" file="Interface\Addons\TPerl\Images\TPerl_30Yard" hidden="true">
							<Size>
								<AbsDimension x="48" y="19"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER" relativePoint="TOP">
									<Offset>
										<AbsDimension x="0" y="-2"/>
									</Offset>
								</Anchor>
							</Anchors>
							<TexCoords left="0" right="1" top="0" bottom="0.4" />
						</Texture>
						<!-- Warning Icon -->
						<Texture name="$parentwarningIcon" file="Interface\Minimap\Ping\ping6" alphaMode="ADD" hidden="true">
							<Size>
								<AbsDimension x="32" y="31"/>
							</Size>
							<Anchors>
								<Anchor point="TOP" relativePoint="TOP">
									<Offset>
										<AbsDimension x="0" y="2"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<!-- Leader Icon -->
						<Texture name="$parentleaderIcon" file="Interface\GroupFrame\UI-Group-LeaderIcon" hidden="true">
							<Size>
								<AbsDimension x="16" y="16"/>
							</Size>
							<Anchors>
								<Anchor point="TOP">
									<Offset>
										<AbsDimension x="0" y="7"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<!-- Assist Icon -->
						<Texture name="$parentassistIcon" file="Interface\GroupFrame\UI-Group-AssistantIcon" hidden="true">
							<Size>
								<AbsDimension x="16" y="16"/>
							</Size>
							<Anchors>
								<Anchor point="TOP">
									<Offset>
										<AbsDimension x="0" y="7"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<!-- Master Loot Icon -->
						<Texture name="$parentmasterIcon" file="Interface\GroupFrame\UI-Group-MasterLooter" hidden="true">
							<Size>
								<AbsDimension x="16" y="16"/>
							</Size>
							<Anchors>
								<Anchor point="TOP">
									<Offset>
										<AbsDimension x="20" y="7"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<FontString name="$parenttext" inherits="GameFontNormal">
							<Anchors>
								<Anchor point="TOPLEFT"/>
								<Anchor point="BOTTOMRIGHT">
									<Offset>
										<AbsDimension x="0" y="1"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Button>
			<!-- Target Portrait -->
			<Frame name="$parentportraitFrame" inherits="TPerl_Portrait_Template">
				<KeyValues>
					<KeyValue key="backdropInfo" value="TPerl_Frame_Backdrop_32_16_3333" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parentnameFrame">
						<Offset>
							<AbsDimension x="-2" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Frame>
			<!--Level Frame-->
			<Frame name="$parentlevelFrame" inherits="TPerlBackdropTemplate,TPerl_BorderStyleTemplate">
				<KeyValues>
					<KeyValue key="backdropInfo" value="TPerl_Frame_Backdrop_32_16_3333" type="global"/>
				</KeyValues>
				<Size>
					<AbsDimension x="27" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parentportraitFrame">
						<Offset>
							<AbsDimension x="-2" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parenttext" inherits="GameFontNormalSmall" text="0" setAllPoints="true"/>
						<Texture name="$parentskull" file="Interface\TargetingFrame\UI-TargetingFrame-Skull" hidden="true">
							<Size>
								<AbsDimension x="16" y="16"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						self:OnBackdropLoaded()
						TPerl_RegisterUnitText(_G[self:GetName().."text"])
					</OnLoad>
				</Scripts>
			</Frame>
			<Frame name="$parentcreatureTypeFrame" inherits="TPerl_BorderStyleTemplate">
				<Size>
					<AbsDimension x="68" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parentportraitFrame">
						<Offset>
							<AbsDimension x="0" y="2"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parenttext" inherits="GameFontNormalSmall" text="none" setAllPoints="true"/>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="$parenttypeFramePlayer" inherits="TPerlBackdropTemplate" >
				<KeyValues>
					<KeyValue key="backdropInfo" value="TPerl_Icon_Backdrop_8_16_3333" type="global"/>
				</KeyValues>
				<Size>
					<AbsDimension x="20" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" relativeTo="$parentportraitFrame">
						<Offset>
							<AbsDimension x="2" y="2"/>
						</Offset>
					</Anchor>
				</Anchors>

				<Layers>
					<Layer level="ARTWORK">
						<Texture name="$parentclassTexture" file="Interface\Glues\CharacterCreate\UI-CharacterCreate-Classes" setAllPoints="true"/>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="$parentbossFrame" inherits="TPerl_BorderStyleTemplate">
				<Size>
					<AbsDimension x="38" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" relativeTo="$parentportraitFrame">
						<Offset>
							<AbsDimension x="-2" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parenttext" inherits="GameFontNormalSmall" text="Elite">
							<Anchors>
								<Anchor point="TOPLEFT"/>
								<Anchor point="BOTTOMRIGHT">
									<Offset>
										<AbsDimension x="0" y="1"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="$parentcpFrame" inherits="TPerl_BorderStyleTemplate" hidden="true">
				<Size>
					<AbsDimension x="26" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parentlevelFrame">
						<Offset>
							<AbsDimension x="-4" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parenttext" inherits="GameFontNormalSmall" text="0" setAllPoints="true"/>
					</Layer>
				</Layers>
			</Frame>
			<!-- Target Stats -->
			<Frame name="$parentstatsFrame" inherits="TPerl_Stats_Template">
				<KeyValues>
					<KeyValue key="backdropInfo" value="TPerl_Frame_Backdrop_32_16_3333" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$parentnameFrame">
						<Offset>
							<AbsDimension x="0" y="2"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture name="$parentfocusTarget" file="Interface\Addons\TPerl\Images\TPerl_Highlight" alphaMode="ADD" setAllPoints="true" hidden="true">
							<TexCoords left="0" right="1" top="0.5" bottom="1"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="$parenteliteFrame" inherits="TPerlBackdropTemplate" hidden="true">
				<Size>
					<AbsDimension x="132" y="132"/>
				</Size>
				<Anchors>
					<Anchor point="RIGHT">
						<Offset>
							<AbsDimension x="45" y="-3"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BORDER">
						<Texture name="$parenttex" file="Interface\Addons\TPerl\Images\TPerl_Elite" setAllPoints="true"/>
					</Layer>
				</Layers>
			</Frame>

			<Frame name="$parenthighlight" inherits="TPerl_HighlightTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentnameFrame"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="$parentportraitFrame"/>
				</Anchors>
			</Frame>
			<Frame name="$parenthitIndicator" inherits="TPerlBackdropTemplate" frameStrata="HIGH">
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parenttext" inherits="NumberFontNormalHuge" hidden="true" text="Error!">
							<FontHeight>
								<AbsValue val="30"/>
							</FontHeight>
							<Color r="1.0" g="1.0" b="1.0"/>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<!-- Buffs Frame -->
			<Frame name="$parentbuffFrame" inherits="TPerlBackdropTemplate">
				<Size>
					<AbsDimension x="100" y="50"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentstatsFrame">
						<Offset>
							<AbsDimension x="2" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Frame>
			<!-- Debuffs Frame -->
			<Frame name="$parentdebuffFrame" inherits="TPerlBackdropTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentbuffFrame"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="$parentbuffFrame"/>
				</Anchors>
			</Frame>
		</Frames>
	</Button>
	<Button name="TPerl_Target" inherits="TPerlBackdropTemplate,TPerl_TargetTemplate">
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="271" y="-12"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>
				TPerl_Target_OnLoad(self, "target")
			</OnLoad>
		</Scripts>
	</Button>
	<Button name="TPerl_Focus" inherits="TPerlBackdropTemplate,TPerl_TargetTemplate">
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="271" y="-200"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Frames>
			<Frame>
				<Size>
					<AbsDimension x="28" y="14"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="TPerl_FocusnameFrame"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture name="$parent_FocusIcon" file="Interface\Addons\TPerl\Images\TPerl_EyeBall"/>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				TPerl_Target_OnLoad(self, "focus")
			</OnLoad>
		</Scripts>
	</Button>
</Ui>
