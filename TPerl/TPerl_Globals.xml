					self:SetFrameLevel(f:GetFrameLevel() + 1)
				end

				p.highlight = self

				if (not p:GetScript("OnEnter")) then
					p:SetScript("OnEnter", function(self)
						if (self.highlight) then
							self.highlight:Select()
						end
						TPerl_PlayerTip(self)
					end)
				end
				if (not p:GetScript("OnLeave")) then
					p:SetScript("OnLeave", function(self)
						if (self.highlight) then
							self.highlight:Deselect()
						end
						TPerl_PlayerTipHide()
					end)
				end

				self.Select = function(self)
					if (TPerlDB.highlightSelection) then
						self.sel = true
						self.tex:Show()
						TPerl_Highlight:SetHighlight(self:GetParent())
					end
				end

				self.Deselect = function(self)
					if (TPerlDB.highlightSelection) then
						self.sel = nil
						self.tex:Hide()
						TPerl_Highlight:SetHighlight(self:GetParent())
					end
				end
			</OnLoad>
		</Scripts>
