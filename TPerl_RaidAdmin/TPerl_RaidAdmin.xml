							local f = (GetMouseFoci and GetMouseFoci()[1]) or (GetMouseFocus and GetMouseFocus())
							if (f) then
								while (f:GetParent() and f:GetParent() ~= UIParent and f:GetParent() ~= TPerl_AdminFrameAnchor) do
									f = f:GetParent()
								end

								if (f ~= TPerl_AdminFrame) then
									TPerl_AdminFrame:Collapse()
								end
							end
						end

